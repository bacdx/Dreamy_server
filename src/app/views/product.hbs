<div class="col-6 justyfy-content-end">
  <a href="/product/addproduct" type="button" class="btn btn-primary align-self-center">+ add product</a>
</div>
  <form class="d-flex" method="POST" action="/product">
    <input type="sreach" class="from-control me-2"  placeholder="Search" aria-label="Search" name="search">
    <button class="btn" type="submit">Search</button>
  </form>
<table class="table table-bordered mt-4 ">
  <thead class="thead-dark">
    <tr>
      <th scope="col">id</th>
      <th scope="col">Tên</th>
      <th scope="col">Ảnh</th>
       <th scope="col">Loại SP</th>
      <th scope="col">Mô tả</th>
      <th scope="col">NSX</th>
      <th scope="col">Giá bán</th>
      
      <th scope="col" class="text-end">trạng thái</th>
    </tr>
  </thead>
  <tbody>

    {{#each data}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.ten}}</td>
      <td><img src="{{this.img}}" style="width: 100px%; height: 150px;" alt=""></td>
       <td>{{this.ten_loai_san_pham}}</td>
      <td>{{this.ghichu}}</td>
      <td>{{this.name}}</td>
      <td>{{this.gia}}</td>
     
      <td class="text-end">
        <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a>
        <a href="/product/edit/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
        <a href="/product/editImg/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Ảnh</a>
        <a href="/product/editSize/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Size</a>
        <a href="/product/editColor/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Màu</a>
        <a href="/product/delete/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
      {{/each}}
    </tr>
   

  </tbody>
</table>


<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Thêm Sản Phẩm</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <form action="/product" enctype="multipart/form-data" method="post">
          <div class="form-group">
            <label for="name">Tên Sản Phẩm </label>
            <input type="text" class="form-control" id="name" name="tensanpham" >

            <label for="pwd">Giá</label>
            <input type="number" class="form-control" id="gia" name="gia" >

             <label for="note">note</label>
            <input type="text" id="note" class="form-control" name="note">
         
            <label for="img">Ảnh Sản Phẩm</label>
            <input type="file" value="file" class="form-control" id="img" name="filetoupload" multiple>
         
         
            <label for="loai">Loại sản phẩm  :</label>
            <select class="form-control" id="loai" name="loaisanpham">
              {{#each loaiSps}}
              <option value="{{this.id}}">{{this.ten}}</option>
              {{/each}}
            </select>
            <br><br>
          <button type="button" onclick="addOption()">+</button>
          <div id="items">
          <div class="form-group" id="optionsContainer" style="display: flex; align-items: center;">
            <label for="productColor">Màu Sắc:</label>
            <input id="productColor" type="color" name="color">
            <label for="nameProductColor">Tên Màu Sắc:</label>
            <input id="nameProductColor" type="text" name="tencolor">

            </input><br><br>

            <label for="productSize">Kích Thước:</label>
            <select id="productSize" t name="productSize">
              <option value="Small">Nhỏ</option>
              <option value="Medium">Trung Bình</option>
              <option value="Large">Lớn</option>
            </select><br><br>

            <label for="productQuantity">Số Lượng:</label>
            <input type="number" id="productQuantity" name="productQuantity" required><br><br>
          </div>
          </div>
       
      </div>
       <div class="modal-footer">
      <button type="submit" class="btn btn-primary">Save changes</button>
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

    </div>
      </form>
    </div>
   
  </div>
</div>
</div>
