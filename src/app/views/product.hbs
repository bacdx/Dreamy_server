<div class="col-6 justyfy-content-end mt-2 mb-2">
  <a href="/product/addproduct" type="button" class="btn btn-primary align-self-center">+ add product</a>
</div>

 
<table class="table table-bordered mt-4 ms-2 text-center" id="example">
  <thead class="thead-dark">
    <tr >
      <th scope="col" >STT</th>
      <th scope="col">Tên</th>
      <th scope="col">Ảnh</th>
      <th scope="col">Loại SP</th>
      <th scope="col">Mô tả</th>
      <th scope="col">NSX</th>
      <th scope="col">Giá bán</th>
      
      <th scope="col" class="text-end">trạng thái</th>
    </tr>
  </thead>
  <tbody>

    {{#each data}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.ten}}</td>
      <td><img src="{{this.img}}" style="width: 100px%; height: 150px;" alt=""></td>
       <td>{{this.ten_loai_san_pham}}</td>
      <td>{{this.ghichu}}</td>
      <td>{{this.name}}</td>
      <td>{{this.gia}}</td>
     
      <td class="text-end">
        <a href="/product/view/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a>
        <a href="/product/edit/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
        <a href="/product/editImg/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Ảnh</a>
        <a href="/product/editSize/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Size</a>
        <a href="/product/editColor/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Màu</a>
         <a href="/product/variant/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Biến thể</a>
        <a href="/product/delete/{{this.id}}" type="button" class="btn btn-light btn-small" onclick="return confirm('Bạn có chắc muốn dừng kinh doanh sản phẩm {{this.ten}} không ?')"><i class="fas fa-trash"></i> Delete</a>
      </td>
      {{/each}}
    </tr>
   

  </tbody>
</table>




