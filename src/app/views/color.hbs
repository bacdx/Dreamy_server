<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"> <a href="/product">Product</a></li>
        <li class="breadcrumb-item active" aria-current="page"> Color</li>
    </ol>
</nav>

<div class="col-6 justyfy-content-end">
  <a href="/product/addColor/{{masp.id}}" type="button" class="btn btn-primary align-self-center">+ add color</a>
</div>
  
<table class="table table-bordered mt-4 text-center" id="example">
  <thead class="thead-dark">
    <tr>
      <th scope="col">STT</th>
      <th scope="col">Tên</th>
      <th scope="col">Ảnh</th>
      
        <th scope="col" class="text-end">trạng thái</th>
    </tr>
  </thead>
  <tbody>
      {{#each data}}
    <tr>
       
      <th scope="row">{{inc @index}}</th>
      <td>{{this.title}}</td>
      <td><img src="{{this.img}}" style="width: 100px%; height: 150px;" alt=""></td>
    
      <td class="text-end">
       
        <a href="/product/editColorFirm/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
        <a href="/product/deleteColor/{{this.id}}" type="button" class="btn btn-light btn-small" onclick="return confirm('Bạn có chắc muốn xóa màu {{this.title}} không ?')"><i class="fas fa-trash"></i>Delete</a>
      
      
      </td>
     
    </tr>
    {{/each}}

  </tbody>
</table>