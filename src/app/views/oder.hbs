
{{#if confirm}}
<div class="alert alert-success alert-dismissible fade show mt-1" role="alert">
    {{confirm}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
<div class="mt-2"></div>
 
<table class="table table-bordered mt-4 ms-2 text-center" id="example">
  <thead class="thead-dark">
    <tr >
      <th scope="col" >STT</th>
      <th scope="col">User</th>
      <th scope="col">Tên Sản phẩm</th>
      <th scope="col">Size</th>
      <th scope="col">Màu</th>
        <th scope="col">Số lượng</th>
      <th scope="col">Thời gian</th>
        <th scope="col">Địa chỉ</th>
      <th scope="col">Mã vận đơn</th>
        <th scope="col">Tổng tiền</th>
      <th scope="col" class="text-end">trạng thái</th>
    </tr>
  </thead>
  <tbody>

    {{#each relsult}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.username}}</td>
      <td>{{this.ten}}</td>
       <td>{{this.size_title}}</td>
      <td>{{this.color_title}}</td>
       <td>{{this.soluong}}</td>
      <td>{{this.thoigian}}</td>
      <td>{{this.address}}</td>
        <td>{{this.mavandon}}</td>
        <td>{{this.tongtien}}</td>
      <td class="text-end">
        
         <a href="/oder/confirm/{{this.id}}" type="button" class="btn btn-success btn-small mb-1" onclick="return confirm('Xác nhận đơn hàng của {{this.username}} ?')"><i class="fas fa-check"></i> Xác Nhận</a>
        <a href="/oder/cancel/{{this.id}}" type="button" class="btn btn-danger btn-small" onclick="return confirm('Hủy đơn hàng của {{this.username}} ?')"><i class="fas fa-window-close"></i> Hủy đơn</a>
      </td>
      {{/each}}
    </tr>
   

  </tbody>
</table>




