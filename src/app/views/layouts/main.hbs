     <script>
        function addOption() {

        const optionsContainer = document.createElement('div');
        optionsContainer.id="optionsContainer"
        const items = document.getElementById('items');
        // Tạo các trường cho Option
        const labelColor = document.createElement('label');
        labelColor.for = 'productColor';
        labelColor.textContent = 'Màu Sắc:';
        const inputColor = document.createElement('input');
        inputColor.id = 'productColor';
        inputColor.type = 'color';
        inputColor.name = 'color';

        const labelTenColor = document.createElement('label');
        labelTenColor.for = 'tenColor';
        labelTenColor.textContent = 'Tên Màu Sắc:';
        const inputTenColor = document.createElement('input');
        inputTenColor.id = 'tenColor';
        inputTenColor.type = 'text';
        inputTenColor.name = 'tencolor';

        const labelSize = document.createElement('label');
        labelSize.for = 'productSize';
        labelSize.textContent = 'Kích Thước:';
        const selectSize = document.createElement('select');
        selectSize.id = 'productSize';
        selectSize.name = 'productSize';
        const option1 = document.createElement('option');
        option1.value = 'Small';
        option1.textContent = 'Nhỏ';
        const option2 = document.createElement('option');
        option2.value = 'Medium';
        option2.textContent = 'Trung Bình';
        const option3 = document.createElement('option');
        option3.value = 'Large';
        option3.textContent = 'Lớn';
        selectSize.appendChild(option1);
        selectSize.appendChild(option2);
        selectSize.appendChild(option3);

        const labelQuantity = document.createElement('label');
        labelQuantity.for = 'productQuantity';
        labelQuantity.textContent = 'Số Lượng:';
        const inputQuantity = document.createElement('input');
        inputQuantity.type = 'number';
        inputQuantity.id = 'productQuantity';
        inputQuantity.name = 'productQuantity';
        inputQuantity.required = true;

        // Thêm các trường mới vào optionsContainer
        optionsContainer.appendChild(labelColor);
        optionsContainer.appendChild(inputColor);
        optionsContainer.appendChild(labelTenColor);
        optionsContainer.appendChild(inputTenColor);
        optionsContainer.appendChild(labelSize);
        optionsContainer.appendChild(selectSize);
        optionsContainer.appendChild(labelQuantity);
        optionsContainer.appendChild(inputQuantity);
        items.appendChild(optionsContainer);
    }
    </script>
