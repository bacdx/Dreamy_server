<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"> <a href="/nsx">Nhà Sản Xuất</a></li>
        <li class="breadcrumb-item active" aria-current="page"> Edit NSX</li>
    </ol>
</nav>
{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{alert}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
{{#each rows}}
<form class="m-3" method="post" action="/nsx/editfirm/{{this.id}}">
    <div class="mb-3">
    <label  class="form-label">Tên NSX</label>
    <input value="{{this.name}}" type="text" class="form-control" name="name">
  </div>

    <div class="mb-3">
    <label  class="form-label">Số điện thoại</label>
    <input value="{{this.numberphone}}" type="text" class="form-control" name="numberphone" >
  </div>

  <div class="mb-3">
    <label  class="form-label">Địa chỉ</label>
    <input value="{{this.address}}" type="text" class="form-control" name="address" >
  </div>

  <div class="mb-3">
    <label  class="form-label">Note</label>
    <input value="{{this.note}}" type="text" class="form-control" name="note" >
  </div>

  

  

  <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  {{/each}}